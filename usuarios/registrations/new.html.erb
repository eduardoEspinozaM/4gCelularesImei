
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :email, autofocus: true, placeholder: 'Email' %>
  <br>

  <% if @minimum_password_length %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Contraseña' %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% else %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Contraseña' %>
  <% end %>
  <br>

  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirmar contraseña' %>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "usuarios/shared/links" %>
