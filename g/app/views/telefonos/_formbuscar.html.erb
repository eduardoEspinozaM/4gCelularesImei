<div class="wrap ms-hero-img-beach ms-hero-bg-primary ms-bg-fixed">
    <div class="container index-1">
        <div class="text-center color-white mb-4">
            <h1>Desbloquea tu Celular con <b>4GCelulares</b></h1>
            <p class="lead">Selecciona el telefono que quieres liberar.
            </p>
            <div class="alert alert-info">
                        <h3>Marca: <%= @modelo.marca.nombre %></h3>
                        <h3>Modelo: <%= @modelo.nombre %></h3>
                        </h1>
                    </div>
        </div>
        <div class="row color-dark">
            <div class="col-lg-12 col-md-12 col-xs-12 mix smartphone samsung" data-price="569.99" data-date="20151201">
                <div class="card wow zoomInUp">
                    <div class="card-block text-center">
                        <%= form_with(url: '/pedidos/crear', local: true, method: :get, class: 'intro-form') do |form| %>
                        <h4 class="text-normal text-center">Selecciona el telefono que quieres liberar</h4>

                        <% telefonos_array = @telefonos.all.map { |telefono| ["#{telefono.modelo.marca.nombre} #{telefono.modelo.nombre}", telefono.id ] }  %>
                        <%= form.select(:telefono_id, options_for_select(telefonos_array), {prompt: true}, {class: 'form-control'})  %>
                        <%= form.submit 'Seleccionar', class: 'btn btn-primary btn-sm btn-block btn-raised mt-2 no-mb' %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- conrainer -->
</div>